	<script type="text/javascript">
		var toolbar = [ {
			text : 'Add',
			iconCls : 'icon-add',
			handler : function() {
				alert('add')
			}
		}, {
			text : 'Cut',
			iconCls : 'icon-cut',
			handler : function() {
				alert('cut')
			}
		}, '-', {
			text : 'Save',
